generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Theme {
  SYSTEM
  LIGHT
  DARK
}

enum TaskInsertPosition {
  BOTTOM
  TOP
}

enum Lang {
  EN
  JA
}

model Task {
  id         String    @unique
  text       String
  completed  Boolean
  date       DateTime
  TaskList   TaskList? @relation(fields: [taskListId], references: [id])
  taskListId String?
}

model TaskList {
  id    String            @unique
  name  String
  tasks Task[]
  apps  TaskListsOnApps[]
}

model TaskListsOnApps {
  app        App      @relation(fields: [appId], references: [id])
  appId      Int
  taskList   TaskList @relation(fields: [taskListId], references: [id])
  taskListId String

  @@id([appId, taskListId])
}

model App {
  id         Int                @id @default(autoincrement())
  userId     String             @unique @db.Uuid
  taskInsert TaskInsertPosition @default(BOTTOM)
  taskLists  TaskListsOnApps[]
}

model Profile {
  id          Int    @id @default(autoincrement())
  userId      String @unique @db.Uuid
  displayName String @default("")
}

model Preferences {
  id     Int    @id @default(autoincrement())
  userId String @unique @db.Uuid
  lang   Lang   @default(EN)
  theme  Theme  @default(SYSTEM)
}
